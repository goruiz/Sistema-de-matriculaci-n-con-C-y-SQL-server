@model matriculacion_proy.Models.ViewModels.EditarAgenciaViewModel
@{
    ViewBag.Title = "EDITAR AGENCIA";
}

<center>
    <h2>@ViewBag.Title</h2>
</center>

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("Editar", "Agencia", FormMethod.Post, new { role = "form", }))
        {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(d => d.idAgencia)

        @Html.LabelFor(d => d.descripcionAgencia, new { @class = "form-content" })
        @Html.TextBoxFor(d => d.descripcionAgencia, new { @class = "form-control" })
        @Html.LabelFor(d => d.direccionAgencia, new { @class = "form-content" })
        @Html.TextBoxFor(d => d.direccionAgencia, new { @class = "form-control" })
        @Html.LabelFor(d => d.telefonoAgencia, new { @class = "form-content" })
        @Html.TextBoxFor(d => d.telefonoAgencia, new { @class = "form-control" })

        <div style="text-align left;">
            <input type="submit" class="btn btn-success" value="Guardar">
        </div>
        }
    </div>
</div>
