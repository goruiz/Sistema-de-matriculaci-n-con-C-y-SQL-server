@model matriculacion_proy.Models.ViewModels.MarcaViewModel
@{
    ViewBag.Title = "NUEVA MARCA";
}

<center>
    <h2>@ViewBag.Title</h2>
</center>

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("Nuevo", "Marca", FormMethod.Post, new { role = "form", }))
        {
            @Html.AntiForgeryToken()

            @Html.LabelFor(d => d.descripcionMarca, new { @class = "form-content" })
            @Html.TextBoxFor(d => d.descripcionMarca, new { @class = "form-control" })
            @Html.LabelFor(d => d.paisMarca, new { @class = "form-content" })
            @Html.TextBoxFor(d => d.paisMarca, new { @class = "form-control" })

            <div style="text-align:left;">
                <input type="submit" class="btn btn-success" value="Guardar">
            </div>
        }
    </div>
</div>